@model SahajSewa.Models.LicenseRegistration
@{
    Layout = null;
}
    <link rel="stylesheet" href="~/css/Bootswatch.css" />


<div class="container col-8 col-sm-12 col-md-8  p-3 mx-auto">
    <div class="text-center">
        <span>Government of Nepal</span><br />
        <span>Ministry of Physical Infrastructure and Transport</span><br />
        <span>Department of Transport Management</span><br />
        <span class="fw-bold">Driving License Application</span><br />
    </div>
    <hr />
    <div class="row gx-5 px-5">
        <div style="position:absolute; left:60%;">
            <img src="@Model.Photo" style="border-radius:5px; border:1px solid #bbb9b9; height:150px; width:auto;" />
        </div>
        <label class="col-5 fw-bold">Reference Id:</label>
        <span class="col-7">@Model.Id</span>
        <br />
        <br />
        <label class="col-5 fw-bold">Application Type:</label>
        <span class="col-7">New License</span>
        <br />
        <br />
        <label class="col-5 fw-bold">Category:</label>
        <span class="col-7">@Model.Category</span>
        <br />
        <br />
        <label class="col-5 fw-bold">Trail Count:</label>
        <span class="col-7">@Model.TrailCount</span>
        <br />
        <br />
        <label class="col-5 fw-bold">Name:</label>
        <span class="col-7">@Model.Fname&nbsp;@Model.Mname&nbsp;@Model.Lname</span>
        <br />
        <br />
        <label class="col-5 fw-bold">Date Of Birth:</label>
        <span class="col-7">@Model.DOB.ToShortDateString()</span>
        <br />
        <br />
        <label  class="col-5 fw-bold">Blood Group:</label>
        <span class="col-7">@Model.Bgroup</span>
        <br />
        <br />
        <label  class="col-5 fw-bold">Phone Number:</label>
        <span class="col-7">@Model.Pnumber</span>
        <br />
        <br />
        <label class="col-5 fw-bold">Registration Date:</label>
        <span class="col-7">null</span>
        <br />
        <br />
        <label class="col-5 fw-bold">Address:</label>
        <span class="col-7">@Model.Pvillage&nbsp;@Model.Pward&nbsp;@Model.Pward,&nbsp;@Model.Pdistrict,&nbsp;@Model.Pprovince</span>
        <br />
        <br />
        <label class="col-5 fw-bold">Guardian's Name:</label>
        <span class="col-7">@Model.Gname</span>
        <br />
        <br />
        <label  class="col-5 fw-bold">Citizenship No:</label>
        <span class="col-7">@Model.CitizenNo</span>
        <br />
        <br />
        <label  class="col-5 fw-bold">Office Location</label>
        <span class="col-7">@Model.OfficeVisit</span>
        <br />
    </div>
    <br />
    <div>
        <p style="text-align:justify"><b>Note:</b> Applicant will receive an email with the examination date. He/She must attend
            the Office in the specified date. If in case, applicant fails to attend to visit office, he/she
            will have to apply for new process of application online again and amount paid will be not refunded.
        </p>
        <p class="fw-bold">Please carry the Original Citizenship along with this application</p>
    </div>
    <div class=" d-flex justify-content-around my-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back To Home</a>
        <a id="btnPrint" class="btn btn-success">Print</a>
    </div>
</div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
$("#btnPrint").click(function() {
    $("a").hide();
    window.print();
    $("a").show();
});
    </script>

