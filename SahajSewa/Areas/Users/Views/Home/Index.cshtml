@model SahajSewa.Models.LicenseRegistration
@{
    ViewData["Title"] = "Home Page";
}


<div class="card bg-light my-5 mx-auto" style="max-width: 30rem;">
    <div class="card-header text-center fw-bold fs-4">Digital License Management System</div>
    <div class="card-body">
        <p class="card-text">
            <ul class="list-group mx-3">
                @if (@Model.Id!=0)
                {
                 <li class="btn btn-primary mb-3 ">
                    <a class="text-decoration-none text-light" asp-controller="LicenseRegistration"
                    asp-action="DownloadFile" asp-route-id="@Model.Id">Application Details</a>
                </li>     
                }
                else
                {
                  <li class="btn btn-primary mb-3 ">
                    <a class="text-decoration-none text-light" asp-controller="LicenseRegistration"
                    asp-action="Upsert">License Registration</a>
                </li>  
                }
                @if (@Model.Id != 0)
                {
                    <li class="btn btn-primary my-3">
                        <a class="text-decoration-none text-light" asp-controller="LicenseRegistration" asp-action="Retrail" asp-route-id="@Model.Id">Re-Trail</a>
                    </li>
                }
                <li class="btn btn-primary my-3">
                    <a class="text-decoration-none text-light" href="#">Add Category</a>
                </li>
                <li class="btn btn-primary my-3">
                    <a class="text-decoration-none text-light" href="#">License Details</a>
                </li>
                <li class="btn btn-primary mt-3 mb-2">
                    <a href="#" class="text-decoration-none text-light">Passport Details</a>
                </li>
            </ul>
        </p>
    </div>
</div>
